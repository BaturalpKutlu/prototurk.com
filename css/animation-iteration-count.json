{
  "author": "tayfunerbilen <tayfunerbilen@gmail.com>",
  "title": "CSS animation-iteration-count Özelliği",
  "name": "animation-iteration-count",
  "browser_support": "css/properties/animation-iteration-count.json",
  "syntax": "animation-iteration-count: sayı | infinite",
  "js_syntax": "object.style.animationIterationCount=\"infinite\"",
  "description": "Bu özellik, elemana uygulanan annimasyonun kaç defa oynatılacağını belirler.",
  "note": "Animasyon ",
  "version": "CSS3",
  "values": [
    {
      "value": "sayı",
      "description": "Animasyonun kaç kez oynatılacağını belirleyen sayı. Varsayılan değeri 1'dir."
    },
    {
      "value": "infinite",
      "description": "Animasyonu hiç durmayacak şekilde sonsuza kadar oynatır."
    }
  ],
  "examples": [
    {
      "code": "<div class=\"box\"></div>\n\n<style>\n    .box {\n        width: 60px;\n        height: 60px;\n        background: blue;\n        position: relative;\n        animation: boxAnimation 1s;\n        animation-iteration-count: 3;\n    }\n    @keyframes boxAnimation {\n        from {left: 0; opacity: 0}\n        to {left: 200px; opacity: 1}\n    }\n</style>",
      "description": "3 defa oynatılacak bir animasyon oluşturalım."
    },
    {
      "code": "<div class=\"box\"></div>\n\n<style>\n    .box {\n        width: 60px;\n        height: 60px;\n        background: blue;\n        position: relative;\n        animation: boxAnimation 1s;\n        animation-iteration-count: infinite;\n    }\n    @keyframes boxAnimation {\n        from {left: 0; opacity: 0}\n        to {left: 200px; opacity: 1}\n    }\n</style>",
      "description": "Sonsuza kadar devam eden bir animasyon oluşturalım."
    }
  ],
  "animatable": false,
  "default_value": "1"
}
